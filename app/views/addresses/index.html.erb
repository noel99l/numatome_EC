<% content_for(:html_title) { "配送先一覧" } %>
  <div class="col-xs-2">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-9">
       <h3>配送先登録/一覧</h3>
       <%= form_for(@address) do |a| %>
        <%= render 'shared/errors', object: @address %>
        <table class="table table-bordered">
         <tr>
           <th class="active">郵便番号</th>
　　　      <td><%= a.text_field :postal_code %> ハイフンなし</td>
         </tr>
         <tr>
           <th class="active">住所</th>
           <td><%= a.text_field :address, style: "width: 80%"%></td>
         </tr>
         <tr>
           <th class="active">宛名</th>
           <td><%= a.text_field :receiver_name %></td>
           <td style="border-color: white;">
            <%= a.submit "登録する", class: "btn btn-primary" %>
           </td>
         </tr>
        </table>
        
        
       <% end %>
    
       <table class="table table-bordered">

        <tr class="active">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="2">

          </th>
        </tr>
       <% @addresses.each do |a| %>
        <tr>
          <td><%= a.postal_code.insert(3, "-") %></td>
          <td><%= a.address %></td>
          <td><%= a.receiver_name %></td>
          <td class="btn-toolbar">
            <div class="button-group">
              <!-- <%# binding.pry %> -->
        	    <%= link_to"編集する", edit_address_path(a), class: "btn btn-primary w-50" %>
              <%= link_to"削除する", address_path(a), method: :delete, class: "btn btn-danger w-50" %>
            </div>
          </td>
        </tr>
       <% end %>
      </table>
     </div>
    </div>
  </div>

